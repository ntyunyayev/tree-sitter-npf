      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "[^%\\n]"
        },
        {
          "type": "PATTERN",
          "value": "[^\\n]*"
        },
        {
          "type": "STRING",
          "value": "\n"
        }
      ]
    },
