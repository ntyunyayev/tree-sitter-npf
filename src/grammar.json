    },
    "python_content": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "_non_percent_line"
      }
    },
    "bash_content": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "_non_percent_line"
