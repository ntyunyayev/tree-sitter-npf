          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "tags"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "STRING",
          "value": "%"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": "pyexit"
            },
            {
              "type": "STRING",
              "value": "variables"
            },
            {
              "type": "STRING",
              "value": "late_variables"
            },
            {
              "type": "STRING",
              "value": "config"
            }
          ]
        },
